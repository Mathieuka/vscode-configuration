// Place your key bindings in this file to override the defaults,
[   
    {   // debu
        "key": "cmd+shift+d",
         "command": "editor.action.insertSnippet",
         "when": "editorTextFocus",
         "args": {
           "snippet": "console.log('%cLOG => ', 'font-size:15px; color: #0015ff', ${TM_SELECTED_TEXT}$1)$2"
         }
    },
    {   // log
        "key": "cmd+shift+m",
         "command": "editor.action.insertSnippet",
         "when": "editorTextFocus",
         "args": {
           "snippet": "console.log(${TM_SELECTED_TEXT}$1)$2;"
         }
    },
    {   // stylesheet
        "key": "ctrl+s",
         "command": "editor.action.insertSnippet",
         "when": "editorTextFocus",
         "args": {
           "snippet": "const styles = StyleSheet.create({${TM_SELECTED_TEXT}$1});"
         }
    },
    {
        "key": "alt+delete",
        "command": "workbench.action.terminal.deleteWordRight",
        "when": "terminalFocus"
    },
    // split terminal
    {
        "key": "shift+cmd+`",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    // terminal navigation
    {
        "key": "shift+cmd+[BracketLeft]",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    //wip.....
    {
        "key": "shift+cmd+=",
        "command": "-workbench.action.zoomIn"
    },
    
    {
        "key": "cmd+-",
        "command": "-workbench.action.zoomOut"
    },
    {
        "key": "alt+w",
        "command": "editor.action.addSelectionToNextFindMatch"
    },
    {
        "key": "ctrl+w",
        "command": "-editor.action.addSelectionToNextFindMatch"
    },
     
    {
        "key": "cmd+d",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "cmd+s cmd+up",
        "command": "workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "cmd+k shift+cmd+right",
        "command": "-workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "cmd+backspace",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "cmd+w",
        "command": "-workbench.action.closeActiveEditor"
    },
    {
        "key": "cmd+s",
        "command": "workbench.action.files.saveAll"
    },
    {
        "key": "alt+cmd+s",
        "command": "-workbench.action.files.saveAll"
    },
    {
        "key": "alt+f5",
        "command": "-workbench.action.editor.nextChange",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+x",
        "command": "-editor.action.webvieweditor.cut",
        "when": "!editorFocus && !inputFocus && activeEditor == 'WebviewEditor'"
    },
    {
        "key": "alt+f",
        "command": "eslint.executeAutofix"
    },

]
