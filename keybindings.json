// Place your key bindings in this file to override the defaults,
[
    // *** log **
    {
        "key": "cmd+shift+d",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "console.log('%cLOG => ', 'font-size:15px; color: #32a879', ${TM_SELECTED_TEXT}$1)$2"
        }
    },
    {
        "key": "cmd+shift+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "console.log(${TM_SELECTED_TEXT}$1)$2"
        }
    },
    // *** terminal ***
    {
        "key": "cmd+[BracketLeft]",
        "command": "workbench.action.terminal.newInActiveWorkspace"
    },
    {
        "key": "cmd+[Quote]",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+delete",
        "command": "workbench.action.terminal.deleteWordRight",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+`",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+[BracketRight]",
        "command": "workbench.action.terminal.kill"
    },
    // ***window***
    {
        "key": "cmd+d",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "cmd+backspace",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "cmd+s",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "cmd+q",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "shift+cmd+a",
        "command": "workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "cmd+k shift+cmd+left",
        "command": "-workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "shift+cmd+s",
        "command": "workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "cmd+k shift+cmd+right",
        "command": "-workbench.action.moveEditorRightInGroup"
    },
    // *** new file / directory ***
    {
        "key": "alt+f",
        "command": "explorer.newFile"
    },
    {
        "key": "alt+d",
        "command": "explorer.newFolder"
    },
    {
        "key": "cmd+[IntlBackslash]",
        "command": "workbench.action.files.save"
    },
    // React-Native
    {
        "key": "cmd+m",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "adb shell input keyevent KEYCODE_MENU"
        }
    },
    {
        "key": "shift+cmd+u",
        "command": "editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "f2",
        "command": "-editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    }
