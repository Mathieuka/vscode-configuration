// Place your key bindings in this file to override the defaults,
[   
    // *** log **
    {   
        "key": "cmd+shift+d",
         "command": "editor.action.insertSnippet",
         "when": "editorTextFocus",
         "args": {
           "snippet": "console.log('%cLOG => ', 'font-size:15px; color: #0015ff', ${TM_SELECTED_TEXT}$1)$2"
         }
    },
    {   
        "key": "cmd+shift+m",
         "command": "editor.action.insertSnippet",
         "when": "editorTextFocus",
         "args": {
           "snippet": "console.log(${TM_SELECTED_TEXT}$1)$2;"
         }
    },
    // *** terminal ***
    {   // create new terminal
        "key": "shift+cmd+[BracketLeft]",
        "command": "workbench.action.terminal.newInActiveWorkspace"
    },
    {
        // kill active terminal cmd + shift + *
        "key": "shift+cmd+[BracketRight]",
        "command": "workbench.action.terminal.kill"
    },
    {
        // split terminal
        "key": "shift+cmd+`",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {   
        // switch terminal cmd + shift + ^ 
        "key": "shift+cmd+[Quote]",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        // delete right word cmd + backspace
        "key": "alt+delete",
        "command": "workbench.action.terminal.deleteWordRight",
        "when": "terminalFocus"
    },
    // ***window***
    {
        "key": "cmd+d",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "cmd+backspace",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "cmd+s",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "cmd+q",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "shift+cmd+a",
        "command": "workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "cmd+k shift+cmd+left",
        "command": "-workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "shift+cmd+s",
        "command": "workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "cmd+k shift+cmd+right",
        "command": "-workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "alt+f",
        "command": "explorer.newFile"
    }
]